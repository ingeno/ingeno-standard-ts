{
  "name": "ingenots",
  "version": "0.0.4",
  "description": "Ingeno Typescript style guide, linter, and formatter using StandardJS",
  "main": "dist/index.js",
  "bin": {
    "ingenots": "./bin/cmd.js"
  },
  "bugs": {
    "url": "https://github.com/ingeno/ingeno-standard-ts/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -Rf ./dist",
    "lint": "eslint . --max-warnings 0",
    "prepare": "husky install",
    "release": "standard-version --sign",
    "test": "jest --coverage",
    "test:ci": "jest --coverage --ci"
  },
  "author": "Ingeno",
  "license": "MIT",
  "homepage": "https://github.com/ingeno/ingeno-standard-ts",
  "keywords": [
    "Typescript Standard Style",
    "linter",
    "typescript",
    "standardjs",
    "tslint"
  ],
  "ingenots": {
    "ignore": [
      "dist",
      "reports"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@jest/types": "28.1.0",
    "@types/eslint": "8.4.1",
    "@types/jest": "27.4.1",
    "husky": "8.0.1",
    "jest": "28.1.0",
    "jest-junit": "13.1.0",
    "standard-version": "9.3.2",
    "ts-jest": "28.0.2",
    "ts-node": "10.7.0",
    "ts-standard": "11.0.0",
    "typescript": "4.6.3"
  },
  "dependencies": {
    "@delagen/eslint-plugin-deprecation": "1.3.2",
    "@typescript-eslint/eslint-plugin": "5.19.0",
    "eslint": "8.13.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.1.4",
    "eslint-plugin-jest-formatting": "3.1.0",
    "eslint-plugin-lodash": "7.4.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "standard-engine": "15.0.0-0"
  },
  "peerDependencies": {
    "typescript": ">=4.5"
  }
}
