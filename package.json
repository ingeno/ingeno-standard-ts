{
  "name": "ingenots",
  "version": "0.0.1",
  "description": "Ingeno Typescript style guide, linter, and formatter using StandardJS",
  "main": "dist/index.js",
  "bin": {
    "ingenots": "./bin/cmd.js"
  },
  "bugs": {
    "url": "https://github.com/ingeno/ingeno-standard-ts/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -Rf ./dist",
    "lint": "eslint . --max-warnings 0",
    "postinstall": "husky install",
    "postpack": "pinst --enable",
    "prepack": "pinst --disable",
    "release": "standard-version --sign",
    "test": "jest --coverage",
    "test:ci": "jest --coverage --ci"
  },
  "author": "Ingeno",
  "license": "MIT",
  "homepage": "https://github.com/ingeno/ingeno-standard-ts",
  "keywords": [
    "Typescript Standard Style",
    "linter",
    "typescript",
    "standardjs",
    "tslint"
  ],
  "ingenots": {
    "ignore": [
      "dist",
      "reports"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "16.0.2",
    "@commitlint/config-conventional": "16.0.0",
    "@jest/types": "27.4.2",
    "@types/eslint": "8.2.2",
    "@types/jest": "27.4.0",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "jest-junit": "13.0.0",
    "pinst": "2.1.6",
    "standard-version": "9.3.2",
    "ts-jest": "27.1.2",
    "ts-node": "10.4.0",
    "ts-standard": "11.0.0",
    "typescript": "4.5.4"
  },
  "dependencies": {
    "@delagen/eslint-plugin-deprecation": "1.3.2",
    "@typescript-eslint/eslint-plugin": "5.9.1",
    "eslint": "8.6.0",
    "eslint-config-airbnb-typescript": "16.1.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "25.3.4",
    "eslint-plugin-jest-formatting": "3.1.0",
    "eslint-plugin-lodash": "7.3.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "standard-engine": "15.0.0-0"
  },
  "peerDependencies": {
    "typescript": ">=4.5"
  }
}
