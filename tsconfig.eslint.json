{
  "compilerOptions": {
    "target":"es2020",
    "module": "commonjs",
    "lib": [
      "es2020"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "declaration": true,
    "pretty": true,
    "noImplicitAny": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "isolatedModules": true
  },
  "include": [
    "bin",
    "src",
    "commitlint.config.js",
    "jest.config.ts",
    "*.json"
  ]
}
